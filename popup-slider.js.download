$( document ).ready(function(){
	$('.display').hide();
	$('.culture-section').show();
	$('.wrapper').show();
	$('.vdo_start').hide();
	lockScroll();
	document.getElementById("bg-front").play();
 	document.getElementById("bg-detail").pause();
 	document.getElementById("bgstart").pause();
 	document.getElementById("song").pause();	
	$('.btn-slider').on('click', function() {
	
			$('.txtscroll').show();
			$('.display').show();
			$('.vdo_start').hide();
			document.getElementById("bg-detail").play();
			unlockScroll();
		});	
	});

	function lockScroll(){
		$html = $('html'); 
		$body = $('body'); 
		var initWidth = $body.outerWidth();
		var initHeight = $body.outerHeight();
	
		var scrollPosition = [
			self.pageXOffset || document.documentElement.scrollLeft || document.body.scrollLeft,
			self.pageYOffset || document.documentElement.scrollTop  || document.body.scrollTop
		];
		$html.data('scroll-position', scrollPosition);
		$html.data('previous-overflow', $html.css('overflow'));
		$html.css('overflow', 'hidden');
		window.scrollTo(scrollPosition[0], scrollPosition[1]);   
	
		var marginR = $body.outerWidth()-initWidth;
		var marginB = $body.outerHeight()-initHeight; 
		$body.css({'margin-right': marginR,'margin-bottom': marginB});
	} 

	function unlockScroll(){
		$html = $('html');
		$body = $('body');
		$html.css('overflow', $html.data('previous-overflow'));
		var scrollPosition = $html.data('scroll-position');
		window.scrollTo(scrollPosition[0], scrollPosition[1]);    
		$body.css({'margin-right': 0, 'margin-bottom': 0});
	  }

	
  	$('.start_mp3').hide();
	jQuery('.stop_mp3').on('click',function(){
		$('.start_mp3').show();
		$('.stop_mp3').hide();
		document.getElementById("song").pause();
	});
	jQuery('.start_mp3').on('click',function(){
		$('.start_mp3').hide();
		$('.stop_mp3').show();
		document.getElementById("song").play();
	});
	jQuery('.video').on('click',function(){
		$('.start_mp3').show();
		$('.stop_mp3').hide();
		document.getElementById("song").pause();
	});
	jQuery('.vbox-close').on('click',function(){
		$('.start_mp3').hide();
		$('.stop_mp3').show();
		document.getElementById("song").play();
	});

	jQuery( document ).ready(function( $ ) {
		$('#txtscroll').hide()
		$(document).scroll(function() {
			var scroll = $(this).scrollTop();
			if (scroll >=200){
				$('#txtscroll').fadeOut(500);
			} else {
				$('#txtscroll').show();
			}
		});
	});
    
});